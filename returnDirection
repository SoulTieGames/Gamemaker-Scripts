///returnDirection(direction)

// return 0,1,2, or 3 based on direction input


var a0=argument0;

if(a0>=315)||(a0<45){//============  right  =============
 return(0);
}else{
 if(a0>=45)&&(a0<135){//============  up  =============
  return(1);
 }else{
  if(a0>=135)&&(a0<225){//============  left  =============
   return(2);
  }else{
   if(a0>=225)&&(a0<135){//============  down =============
    return(3);
   }
  }
 }
}







